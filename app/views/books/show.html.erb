<div class="container">
<div class="row">
	<div class="col-xs-3">
      <h2>User info</h2>
      <%= render 'users/profile', book: @book, user: @user %>
      <h2>New book</h2>
      <%= render 'books/newform', book: @book, user: @user %>
	</div>

		<div class="col-xs-9">
			<h3>Book detail</h3>
			<table class="table table-striped">
				<tbody>
					<tr>
						<td><%= link_to  user_path(@user.id) do %>
		              <%= attachment_image_tag @user, :profile_image, class: " pull-left profile-thumb", fallback: "no_image.jpg", size: "40x40" %>
		              <br><br><%= @user.name %>
		              <% end %></td>
					  <td><%=  @book.title  %></td>
					  <td><%= @book.body %></td>
					  <td><% if @book.user_id == current_user.id %>
					  <%= link_to "Edit", edit_book_path(@book.id) ,class:"btn-sm btn-success edit_book" %></td>
					  <td><%= link_to "Destroy", book_path(@book.id), method: :delete,  "data-confirm" => "本当に消しますか？"  ,class:"btn-sm btn-danger destroy_book"%></td>
						    <% end %>
					  </td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>