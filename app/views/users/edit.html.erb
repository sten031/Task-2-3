<div class="">
  <div class="container">
    <h2 class="form-header-title">User info</h2>
    <div class="error">
            <% if @user.errors.any? %>
  <div id="error_explanation" class="">
    <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>
          <div class="field">
            <%= form_for(@user) do |f| %>

              <div class="field">
                <label for="user_name">Name</label>
                <%= f.text_field :name, autofocus: true, class:"name", id:"user_name"%>
              </div>

                <div class="field">
              <label for="user_iamge">Image</label>
                <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
              </div>

              <div class="field">
                <label for="InputTextarea">Introduction</label>
                <%= f.text_area :introduction, autofocus: true, class:"introduction", id:"inputEmail"%>
              </div>
              <div class="actions">
                <%= f.submit "Update User", class:"" %>
              </div>
            <% end %>
          </div>
  </div>
</div>