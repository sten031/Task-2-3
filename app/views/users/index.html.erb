   <div class="container">
      <div class="row">
        <div class="col-xs-3">
      <h2>User info</h2>
      <%= render 'users/profile', book: @book, user: @user %>
      <h2>New book</h2>
      <%= render 'books/newform', book: @book, user: @user %>
        </div>
        <div class="col-xs-9">
          <h2>Users</h2>
          <table class="table">
            <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <a><%= attachment_image_tag user, :profile_image, class: "pull-left profile-thumb", fallback: "no_image.jpg", size: "40x40" %></a>
                  </td>
                  <td>
                    <%= user.name %>
                  </td>
                  <td>
                    <%= link_to "Show", user_path(user.id) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
