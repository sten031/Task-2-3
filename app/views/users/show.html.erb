<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= render 'users/profile', book: @book, user: @user %>
      <h2>New book</h2>
      <%= render 'books/newform', book: @book, user: @user %>
    </div>
    <div class="col-xs-9">
      <h3>Books</h3>
      <table class="table table-hover table-inverse">
        <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to  user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, class: " pull-left profile-thumb", fallback: "no_image.jpg", size: "40x40" %>
              <% end %>
            <td>
              <%= link_to book.title, book_path(book) %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

