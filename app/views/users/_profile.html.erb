<%= attachment_image_tag user, :profile_image, class: " pull-left profile-thumb", fallback: "no_image.jpg",size: "100x100" %>
<table class="table">
  <tbody>
    <tr>
        <th>name</th>
        <th><%= user.name %></th>
    </tr>
    <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to edit_user_path(current_user) do %>
    <i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user" >
    </i>
  <% end %>
</div>